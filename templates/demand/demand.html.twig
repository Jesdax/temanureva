{% extends 'base.html.twig' %}
{% form_theme form 'materialize_layout.html.twig' %}

{% block title %}Demande naturaliste - NAO{% endblock %}

{% block body %}
    {{ include('common/header.html.twig', {'title' : 'Demande naturaliste'}) }}
    {{ include('common/breadcrumb.html.twig', {'breadcrumb' : breadcrumb }) }}
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col s12 l6">
                {{ form_row(form.nb_certificate) }}
            </div>
            <div class="col s12 l6">
                {{ form_row(form.certificate_date) }}
            </div>
        </div>
        {{ form_row(form.certificate) }}
        {{ form_help(form.certificate) }}

        <div class="row center margin-t margin-b">
            {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn-round btn-brown'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}