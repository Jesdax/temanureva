{% extends 'base.html.twig' %}
{% form_theme form 'materialize_layout.html.twig' %}

{% block title %} Ajout Observation {% endblock %}


{% block body %}
    <div class="center">
        <h1>Ajouter une observation</h1>
    </div>
    <div>
        <nav class="ariane">
            <div class="nav-wrapper">
                <div class="col s12">
                    <a href="#" class="breadcrumb">Accueil</a>
                    <a href="#" class="breadcrumb">Mon profil</a>
                </div>
            </div>
        </nav>
    </div>
    <div class="container center">
        <p>
            *Champs obligatoires
        </p>
        {{ form_start(form) }}
        <div class="row">
            <div class="col s6">
                {{ form_row(form.bird) }}
                <div id="resultList" ></div>
            </div>

            <div class="col s6">
                {{ form_row(form.location) }}
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                {{ form_row(form.observation_date) }}
                {{ form_row(form.image) }}
            </div>
        </div>

        <button class="btn btn-connexion" type="submit"> Envoyer l'observation</button>
        {{ form_end(form) }}
    </div>




{% endblock %}
