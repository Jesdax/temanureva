{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - NAO{% endblock %}

{% block body %}
    {{ include('common/header.html.twig', {'title' : 'Mot  de passe oublié'}) }}
    {{ include('common/breadcrumb.html.twig', {'breadcrumb' : breadcrumb }) }}
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col s12 offset-l4 l4">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row center margin-b margin-t">
            {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn-round btn-brown'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}