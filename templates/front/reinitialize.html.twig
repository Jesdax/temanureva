{% extends 'base.html.twig' %}

{% block title %}Réinitialiser mot de passe - NAO{% endblock %}

{% block body %}
    {{ include('common/header.html.twig', {'title' : 'Réinitialiser mot de passe'}) }}
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col s12">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="col s12 l6">
                {{ form_row(form.password.first) }}
            </div>
            <div class="col s12 l6">
                {{ form_row(form.password.second) }}
            </div>
        </div>
        <div class="row center margin-b margin-t">
            {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn-round btn-brown'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}