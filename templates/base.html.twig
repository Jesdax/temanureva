<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {#<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">#}
            <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
            <link rel="stylesheet" href="{{ asset('assets/css/materialize.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
            <script src="{{ asset('assets/js/map.js') }}" type="text/javascript"></script>

        {% endblock %}
    </head>
    <body>
    {% block navigation %}
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper">
                    <a href="{{ path('homepage') }}" class="brand-logo"><img src="{{ asset('assets/img/logo.png') }}" alt="Logo" class="logo"></a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a href="{{ path('homepage') }}">Accueil</a></li>
                        <li><a href="{{ path('exploration') }}">Exploration</a></li>
                        <li><a href="#">Espèces</a></li>
                        <li><a href="{{ path('blog') }}">Blog</a></li>
                        <li><a href="#">Nous contacter</a></li>
                        {% if is_granted(['ROLE_PARTICULAR', 'ROLE_NATURALIST', 'ROLE_EDITOR', 'ROLE_ADMIN'])  %}
                            <li><a href="{{ path('profil', {'id': app.user.id}) }}">Mon profil</a></li>
                            <li><a href="{{ path('security_logout') }}">Se déconnecter</a></li>
                        {% else %}
                            <li><a href="{{ path('security_login') }}">Connexion / Inscription</a></li>
                        {% endif %}
                        <li><a href="#"><i class="material-icons">search</i></a></li>
                    </ul>
                </div>
            </nav>
        </div>
    {% endblock %}
    <main>
        {% block body %}{% endblock %}
    </main>
    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="{{ asset('assets/js/main.js') }}"></script>
        <script src="{{ asset('assets/js/autocompletion.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
    {% endblock %}
    {% block footer %}
        <footer class="row center padding-bottom">
            <div>
                <div class="col m3 center">
                    <h4>Réseaux sociaux</h4>
                    <div class="icone">
                        <img src="{{ asset('assets/img/logo_bouton_fb.png') }}" alt="Facebook">
                        <img src="{{ asset('assets/img/logo_instagram.png') }}" alt="Facebook">
                    </div>
                </div>
                <div class="col m2 center">
                    <h4>Qui sommes-nous ?</h4>
                    <a href="#">Association</a>
                </div>
                <div class="col m2 center">
                    <h4>Foire aux questions</h4>
                    <a href="#">FAQ</a>
                </div>
                <div class="col m2 center">
                    <h4>Newsletter</h4>
                    <input type="email" placeholder="Inscrivez-vous à la Newsletter">
                    <button class="btn btn-homepage">S'inscrire</button>
                </div>
                <div class="col m3 center">
                    <h4>Informations juridiques</h4>
                    <a href="#">Mentions légales</a>
                </div>
            </div>
        </footer>
    {% endblock %}
    </body>
</html>
