<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {#<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">#}
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
        <link rel="stylesheet" href="{{ asset('assets/css/materialize.css') }}">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css"
              integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
              crossorigin=""/>
        <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"
                integrity="sha512-nMMmRyTVoLYqjP9hrbed9S+FzjZHW5gY1TWCHA5ckwXZBadntCNs8kEqAWdrb9O7rxbCaA4lKTIWjDXZxflOcA=="
                crossorigin=""></script>
        <script src="{{ asset('assets/js/map.js') }}" type="text/javascript"></script>
        <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
    {% endblock %}
</head>
<body>
{% block navigation %}
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper">
                    <a href="{{ path('homepage') }}" class="brand-logo"><img src="{{ asset('assets/img/logo.png') }}" alt="Logo" class="logo"></a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a href="{{ path('homepage') }}">Accueil</a></li>
                        <li><a href="{{ path('exploration') }}">Exploration</a></li>
                        <li><a href="{{ path('oiseaux') }}">Espèces</a></li>
                        <li><a href="{{ path('blog') }}">Blog</a></li>
                        <li><a href="#">Nous contacter</a></li>
                        {% if is_granted(['ROLE_PARTICULAR', 'ROLE_NATURALIST', 'ROLE_EDITOR', 'ROLE_ADMIN'])  %}
                            <li><a href="{{ path('profil') }}">Mon profil</a></li>
                            <li><a href="{{ path('security_logout') }}">Se déconnecter</a></li>
                        {% else %}
                            <li><a href="{{ path('security_login') }}">Connexion / Inscription</a></li>
                        {% endif %}
                        <li><a href="#"><i class="material-icons">search</i></a></li>
                    </ul>
                </div>
            </nav>
        </div>
{% endblock %}
{% block body %}{% endblock %}
{% block footer %}
    <footer class="row center padding-bottom">
        <div>
            <div class="col s3 center">
                <h4>Réseaux sociaux</h4>
                <div class="icone">
                    <img src="{{ asset('assets/img/logo_bouton_fb.png') }}" alt="Facebook">
                    <img src="{{ asset('assets/img/logo_instagram.png') }}" alt="Facebook">
                </div>
            </div>
            <div class="col s2 center">
                <h4>Qui sommes-nous ?</h4>
                <a href="#">Association</a>
            </div>
            <div class="col s2 center">
                <h4>Foire aux questions</h4>
                <a href="#">FAQ</a>
            </div>
            <div class="col s2 center">
                <h4>Newsletter</h4>
                <input type="email" placeholder="Inscrivez-vous à la Newsletter">
                <button class="btn btn-homepage">S'inscrire</button>
            </div>
            <div class="col s3 center">
                <h4>Informations juridiques</h4>
                <a href="#">Mentions légales</a>
            </div>
        </div>
    </footer>
{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
    <script src="{{ asset('assets/js/autocompletion.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/vue@2.5.17/dist/vue.js"></script>
<script src="{{ asset('build/app.js') }}"></script>
</body>
</html>
