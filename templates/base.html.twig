<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {#<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">#}
            <link rel="stylesheet" href="{{ asset('assets/css/materialize.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        {% endblock %}
    </head>

    <body>
    {% block navigation %}
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper">
                    <a href="{{ path('homepage') }}" class="brand-logo"><img src="{{ asset('assets/img/Logo_NAO_png_3.png') }}" alt="Logo" class="logo"></a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li><a href="{{ path('homepage') }}">Accueil</a></li>
                        <li><a href="#">Exploration</a></li>
                        <li><a href="#">Espèces</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Nous contacter</a></li>
                        <li><a href="{{ path('security_login') }}">Connexion / Inscription</a></li>
                        <li><a href="#"><i class="material-icons">search</i></a></li>
                    </ul>
                </div>
            </nav>
        </div>
    {% endblock %}
    {% block body %}{% endblock %}
    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="{{ asset('assets/js/main.js') }}"></script>
        <script src="{{ asset('assets/js/autocompletion.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
    {% endblock %}
    {% block footer %}
        <footer class="row center padding-bottom">
            <div>
                <div class="col s3 center">
                    <h4>Réseaux sociaux</h4>
                    <div class="icone">
                        <img src="{{ asset('assets/img/logo_bouton_fb.png') }}" alt="Facebook">
                        <img src="{{ asset('assets/img/logo_instagram.png') }}" alt="Facebook">
                    </div>
                </div>
                <div class="col s2 center">
                    <h4>Qui sommes-nous ?</h4>
                    <a href="#">Association</a>
                </div>
                <div class="col s2 center">
                    <h4>Foire aux questions</h4>
                    <a href="#">FAQ</a>
                </div>
                <div class="col s2 center">
                    <h4>Newsletter</h4>
                    <input type="email" placeholder="Inscrivez-vous à la Newsletter">
                    <button class="btn btn-homepage">S'inscrire</button>
                </div>
                <div class="col s3 center">
                    <h4>Informations juridiques</h4>
                    <a href="#">Mentions légales</a>
                </div>
            </div>
        </footer>
    {% endblock %}
    </body>
</html>
